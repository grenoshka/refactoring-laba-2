<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="GeneralGradientButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:layout_width">200dp</item>
        <item name="end_color">@color/gradientEnd</item>
        <item name="start_color">@color/gradientStart</item>
        <item name="orientation">top_bottom</item>
        <item name="filled">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NotFilledGradientButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:layout_width">200dp</item>
        <item name="end_color">@color/gradientEnd</item>
        <item name="start_color">@color/gradientStart</item>
        <item name="orientation">top_bottom</item>
        <item name="filled">false</item>
        <item name="stroke">6dp</item>
        <item name="fill_color">@color/translucent_white</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GeneralText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/yatra_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AllertaText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>